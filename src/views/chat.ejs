<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/chat.css">

<div class="container-fluid mt-3">
  <div class="chat-wrapper shadow-sm">
    <div class="chat-sidebar p-3">
      <h5 class="fw-bold mb-3 text-primary">Chats</h5>
      <ul id="userList" class="list-unstyled mb-0">
        <!-- dynamically populated -->
      </ul>
    </div>

    <div class="chat-main d-flex flex-column">
      <div id="messages" class="chat-messages flex-grow-1 p-3">
        <!-- messages go here -->
      </div>

      <form id="sendForm" class="chat-input border-top p-3 d-flex align-items-center bg-white">
        <input id="messageInput" type="text" class="form-control me-2" placeholder="Type a message..." autocomplete="off">
        <button class="btn btn-primary px-4" type="submit">
          <i class="bi bi-send"></i> Send
        </button>
      </form>
    </div>
  </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/chat.js"></script>


